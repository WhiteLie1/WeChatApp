.container{
  padding: 0;
  background-color: white;
  align-items: left;

}
.selection{
  border-bottom: 5px solid #ddd;
  padding-bottom: 10px;

}
.header {
  border-left: 2px solid lightgreen;
  display: flex;
  /*调整对齐方式  */
  justify-content: space-between;
  align-content: center;
  height: 60rpx;
  margin-top: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-bottom: 10rpx;
}
.text-all {
  color: green;
  font-size: 13px;
}
.content {
  display: flex;
  flex-direction: row;
  /*设置自动换行  */
  flex-wrap: wrap;
  justify-content: center;
}
.content-item {
  width: 45%;
  height: 250rpx;
  background-color: goldenrod;
  /* border: 1px solid white; */
  margin: 5px;
  /*这个元素定位了文字才能依靠这个绝对定位  */
  position: relative;
}


.goo-self{
  margin-bottom: 20px;
  position:relative;
  font-size:12px;
  width: 100%;
  height:100px;
}
.goo-img{
  width: 45%;
  height: 100%;
  float: left;
}
.good-card{
  width: 20px;
  height: 20px;
  position: absolute;
  bottom: 10px;
  right: 5px;
}
.goo-lastsale{
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 8px;
  padding-right: 8px;
  display: block;
  position: absolute;
  bottom: 25px;
  right: 93px;
  background-color: red;
  color: white;
  border-radius: 10px;
}
.goo-price{
  display: block;
  position: absolute;
  color: #DD7A47;
  font-weight: bolder;
  bottom: 5px;
  right: 100px;
}
.text{
  text-align:justify;
  
}
.text::after{
  width: 100%;
  display: inline-block;
  content: '';
}
